{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "npx prisma generate",
    "dev": "pnpm run migration:dev && nest start --watch",
    "build": "tsc -b ./tsconfig.build.json",
    "generate:migrations": "./with-db migrate dev && pnpm prisma format",
    "generate:prisma": "prisma generate",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "playground:start": "docker-compose rm -fsv && docker-compose -f ../../docker-compose.yml --env-file ./.env up",
    "migration:deploy": "npx prisma migrate deploy",
    "migration:create": "npx prisma migrate dev --create-only",
    "migration:dev": "npx prisma migrate dev",
    "test": "jest",
    "test:unit": "jest --selectProjects test:unit",
    "test:i9n": "jest --selectProjects test:i9n",
    "test:e2e": "jest --selectProjects test:e2e",
    "docker:pull": "docker pull ghcr.io/jellyfishsdk/whale-api:3.28.1 && docker pull ghcr.io/jellyfishsdk/playground-api:3.28.1 && docker pull defi/defichain:3.2.4 && docker pull postgres:14.6-alpine"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@birthdayresearch"
    ]
  },
  "jest": {
    "preset": "@birthdayresearch/sticky-turbo-jest",
    "projects": [
      {
        "displayName": "test:i9n",
        "preset": "@birthdayresearch/sticky-turbo-jest",
        "testRegex": ".*\\.i9n\\.ts$"
      }
    ]
  },
  "dependencies": {
    "@fastify/helmet": "^10.1.0",
    "@nestjs/common": "^9.3.7",
    "@nestjs/config": "^2.3.0",
    "@nestjs/core": "^9.3.7",
    "@nestjs/platform-fastify": "^9.3.7",
    "@nestjs/throttler": "^3.1.0",
    "@prisma/client": "^4.9.0",
    "@waveshq/walletkit-core": "^0.32.2",
    "@waveshq/walletkit-ui": "^0.32.2",
    "bignumber.js": "^9.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ethers": "^5.7.2",
    "joi": "^17.7.0",
    "nestjs-pino": "^3.1.2",
    "pg": "^8.9.0",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@birthdayresearch/eslint-config": "^0.4.0",
    "@birthdayresearch/sticky-prettier": "^0.4.0",
    "@birthdayresearch/sticky-testcontainers": "^0.4.0",
    "@birthdayresearch/sticky-turbo-jest": "^0.4.0",
    "@birthdayresearch/sticky-typescript": "^0.4.0",
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "light-my-request": "^5.8.0",
    "prisma": "^4.9.0",
    "smartcontracts": "workspace:0.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "testcontainers": "^9.1.2",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@birthdayresearch/sticky-prettier"
}
