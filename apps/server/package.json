{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf dist",
    "dev": "pnpm run migration:dev && nest start --watch",
    "docker:pull": "docker pull ghcr.io/birthdayresearch/whale-api:3.31.1 && docker pull ghcr.io/birthdayresearch/playground-api:3.31.1 && docker pull defi/defichain:master-92f1c507b && docker pull postgres:15.2-alpine",
    "generate:migrations": "./with-db migrate dev && pnpm prisma format",
    "generate:prisma": "prisma generate",
    "lint": "eslint .",
    "migration:create": "npx prisma migrate dev --create-only",
    "migration:deploy": "npx prisma migrate deploy",
    "migration:dev": "npx prisma migrate dev",
    "playground:start": "docker-compose rm -fsv && docker-compose -f ../../docker-compose.yml --env-file ./.env up",
    "prepare": "npx prisma generate",
    "test": "jest --maxWorkers=4 --coverage --forceExit --passWithNoTests",
    "test:e2e": "jest --selectProjects test:e2e",
    "test:i9n": "jest --selectProjects test:i9n",
    "test:unit": "jest --selectProjects test:unit"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@stickyjs/prettier",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@stickyjs"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "no-restricted-properties": "warn",
          "unused-imports/no-unused-vars": "warn"
        }
      }
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "@waveshq/standard-api-fastify": "^1.0.9",
    "@waveshq/walletkit-core": "^0.51.0",
    "@waveshq/walletkit-ui": "^0.51.0",
    "bignumber.js": "^9.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ethers": "^5.7.2",
    "joi": "^17.9.2",
    "pg": "^8.11.1"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.5.0",
    "@stickyjs/eslint-config": "^1.2.1",
    "@stickyjs/prettier": "^1.2.1",
    "@stickyjs/testcontainers": "^1.2.1",
    "@stickyjs/turbo-jest": "^1.2.1",
    "@stickyjs/typescript": "^1.2.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/supertest": "^2.0.12",
    "light-my-request": "5.10.0",
    "prisma": "^4.16.2",
    "shuffle-seed": "^1.1.6",
    "smartcontracts": "workspace:0.0.0",
    "smartcontracts-queue": "workspace:0.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "testcontainers": "^9.9.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  }
}
